import numpy as np
import matplotlib.pyplot as plt
import pickle

x = np.linspace(0, 10)
y = np.exp(x)
fig = plt.figure(1)
plt.subplot()
plt.plot(x, y)


with open('plots.obj', 'wb') as file:
    pickle.dump(fig, file)

plt.close(fig)

#simulation of new scope
with open('plots.obj', 'rb') as file:
    fig2 = pickle.load(file)

# figure is now available as fig2

plt.show()